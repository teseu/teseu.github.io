---
const { nome, papel } = Astro.props
---

<div class="overflow-hidden rounded-lg bg-base-200/50 shadow-md w-80 relative">
  <slot name="img" />
  <div class="skeleton w-full h-full z-10 max-h-[19rem] rounded-none absolute top-0" ></div>
  <div class="p-4 flex flex-col gap-2">
    <slot name="badge" />
    <h3 class="text-xl font-semibold">{ nome }</h3>
    <div class="text-sm">
      <p>{ papel }</p>
    </div>
    <div class="flex gap-2 text-info-1050">
      <slot name="redes" />
    </div>
  </div>
</div>

<style>
.skeleton {
  opacity: 65%;
  animation-duration: 2s;
}
</style>
